<!-- views/pages/author_list.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
		<title><%= title %></title> 
		<% include ../partials/head %>
  </head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<% include ../partials/sidebar %>
				<div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
          <% if (author_list.length) { %>
            <% for (var i in author_list) { %>				
							<li>
								<a href='<%= author_list[i].url %>'><%= author_list[i].name %></a>
								(<%= author_list[i].date_of_birth_formatted %>) - 
								(<%= author_list[i].date_of_death_formatted %>) 
							</li>
            <% } %>
          <% } else { %> 
            <li> Não há autore(a)s. </li>  
          <% } %>
          </ul>
				</div>
			</div>
		</div>
	</body>
</html>    